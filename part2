void inversa() {
    int n;
    
    printf("Ingresa el tamaño del vector: \n");
    scanf("%d", &n);
    
    int vector[n];
    
    printf("Ingresa %d números:\n", n);
    
    for (int i = 0; i < n; i++) {
        scanf("%d", &vector[i]);
    }
    
    printf("Números ingresados en orden inverso:\n");
    
    for (int i = n - 1; i >= 0; i--) {
        printf("%d ", vector[i]);
    }
    
}
