void pares() {
    int n, m;
    
    printf("Ingresa el valor de n: \n");
    scanf("%d", &n);
    
    printf("Ingresa el valor de m: \n");
    scanf("%d", &m);
    
    int resultado = 0, i = n;
    
    if (n <= m) {
        while (i < m + 1) {
            if (i % 2 == 0) {
                resultado = resultado + i;
            }
            i++;
        }
        
        printf("El resultado de la suma de los valores entre %d y %d es %d\n", n, m, resultado);
    }
}
